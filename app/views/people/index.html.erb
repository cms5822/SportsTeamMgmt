<h1>Sports Team Management System Users</h1>

<table border="1">
  <tr>
    <th align="center">Name</th>
    <th align="center">Address</th>
    <th align="center">Username</th>
  </tr>

<% @people = Person.all.sort_by &:name 
	@people.each do |person| %>
  <tr>
  	<td align="center"><%= link_to person.name, person %></td>
  	<td align="center"><%= person.address %></td>
	<td align="center"><%= person.username %></td>

   
    <td><%= link_to (image_tag 'edit.png', :height => '25'), edit_person_path(person) %></td>
    <td><%= link_to (image_tag 'delete.png', :height => '25'), person, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

