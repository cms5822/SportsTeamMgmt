<h1>Sports Team Management Teams</h1>

<table border="1">
  <tr>
    <th align="center">Name</th>
    <th align="center">League</th>
    <th align="center">Venue #</th>
    <th align="center">Manager</th>
  </tr>

  <% @teams = Team.all
     @teams.each do |team| %>
      <tr>
        <td align="center"><%= link_to team.name, team %></td>
        <td align="center"><%= link_to team.league.name, team.league %></td>
        <td align="center"><%= link_to team.venue.name, team.venue %></td>
        <td align="center"><%= link_to team.manager.name, team.manager %></td>

    <td><%= link_to (image_tag 'edit.png', :height => '25'), edit_team_path(team) %></td>
    <td><%= link_to (image_tag 'delete.png', :height => '25'), team, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Team', new_team_path %>
