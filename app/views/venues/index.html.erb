<h1>Sports Team Management Venues</h1>

<table border="1">
  <tr>
    <th align="center">Name</th>
    <th align="center">Address</th>
    <th align="center">Capacity</th>
    <th align="center">Indoor</th>
    <th align="center">Description</th>
  </tr>

<% @venues = Venue.all
   @venues.each do |venue| %>
  <tr>
    <td align="center"><%= venue.name %></td>
    <td align="center"><%= venue.address %></td>
    <td align="center"><%= venue.seatCapacity %></td>
    <td align="center"><%= venue.indoor %></td>
    <td align="center"><%= venue.description %></td>
    <td><%= link_to 'Show', venue %></td>
    <td><%= link_to (image_tag 'edit.png', :height => '25'), edit_venue_path(venue) %></td>
    <td><%= link_to (image_tag 'delete.png', :height => '25'), venue, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

