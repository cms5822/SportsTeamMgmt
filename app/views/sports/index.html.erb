<h1>Listing sports</h1>

<table border="1">
  <tr>
    <th align="center">Sport Name</th>
    <th></th>
    <th></th>
  </tr>

<% @sports.each do |sport| %>
  <tr>
    <td align="center"><%= link_to sport.name, sport %></td>
    <td><%= link_to (image_tag 'delete.png', :height => '25'), sport, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

