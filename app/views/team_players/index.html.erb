<h1>Sports Team Management Players</h1>

<table border="1">
	
	<% teamList = Team.all
	teamList.each do |thisTeam| %>
	
  <tr>
  	<th colspan="5" align="center"><h3><%=link_to thisTeam.name, thisTeam %></h3></th>
  </tr>

  <tr>
    <th align="center">Name</th>
    <th align="center">Jersey</th>
    <th align="center">Active</th>
  </tr>
	  <% @team_players = TeamPlayer.all
	     @team_players.each do |team_player| %>
	     	<% if team_player.team == thisTeam %>
                <tr>
                    <td align="center"><%=link_to team_player.person.name, team_player.person %></td>
                    <td align="center"><%=team_player.player_number %></td>
                    <td align="center">
                    <% if team_player.active == 1 %>
                          <%= image_tag "active.png", :height => "25" %>
                    <% else %>
                          <%= image_tag "inactive.png", :height => "25" %>
                    <% end %>


                    <td align="center"><%= link_to (image_tag 'edit.png', :height => '25'), edit_team_coach_path(team_player) %></td>
                    <td align="center"><%= link_to (image_tag 'delete.png', :height => '25'), team_player, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
                </tr>
  	        <% end %>
    <% end %>
<% end %>
</table>


<br />

<%= link_to 'New Team Player', new_team_player_path %>